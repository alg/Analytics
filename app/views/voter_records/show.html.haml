%p#notice= notice

-if VoterRecord.count>0
  .row
    .span11
      %h2= "All Voter Records ("+VoterRecord.count.to_s+")"
    .span1#statebacknext
      = link_to 'Back', :back  
  %br
  %table{:style=>"text-align:center"}
    %tr
      %th Voter ID
      %th &nbsp;
      %th Type
      %th &nbsp;
      %th Gender
      %th &nbsp;
      %th Party
      %th &nbsp;
      %th New
      %th &nbsp;
      %th Other
      %th &nbsp;
      %th Status
    - VoterRecord.all.each do |vr|
      %tr
        %td= vr.vname
        %td
        %td= (vr.vtype == '' ? 'domestic' : vr.vtype)
        %td
        %td= vr.gender
        %td
        %td= vr.party
        %td
        %td= (vr.new ? "Yes" : "")
        %td
        %td= vr.other
        %td
        %td= vr.status
-else
  .row
    .span11
      %h2= "No Voter Records"
    .span1#statebacknext
      = link_to 'Back', :back
