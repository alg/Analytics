%p#notice= notice

-if @voters.length > 0
  .row
    .span11
      %h2= "All Voters ("+@voters.length.to_s+")"
    .span1#statebacknext
      = link_to 'Back', :back  
  %br
  %table{:style=>"text-align:center"}
    %tr
      %th VID
      %th &nbsp;
      %th Type
      %th &nbsp;
      %th M/F
      %th &nbsp;
      %th Party
      %th &nbsp;
      %th Mil
      %th &nbsp;
      %th Stat
      %th &nbsp;
      %th New
      %th &nbsp;
      %th ONL
      %th &nbsp;
      %th RR
      %th &nbsp;
      %th RU
      %th &nbsp;
      %th AS
      %th &nbsp;
      %th Voted
      %th &nbsp;
      %th Ballot
      %th &nbsp;
      %th Rjct
      %th &nbsp;
      %th VTRs
      %th &nbsp;
      %th Election
      %th &nbsp;
      %th 
    - @voters.each do |v|
      -if ! v.archived
        %tr
          %td= v.vname
          %td
          %td= (v.vtype=~/UOC/ ? 'UOC' : '')
          %td
          %td= v.vgender
          %td
          %td= v.vparty
          %td
          %td= (v.vother=~/military/i ? 'Yes' : '')
          %td
          %td= (v.vstatus=~/abs/i ? 'Abs' : '')
          %td
          %td= (v.vnew ? 'Yes' : '')
          %td
          %td= (v.vonline ? 'Yes' : '')
          %td
          %td= (v.vregister=~/approve/?'Yes':v.vregister.capitalize)
          %td
          %td= (v.vupdate=~/approve/?'Yes':v.vupdate.capitalize)
          %td
          %td= (v.vabsreq=~/approve/?'Yes':v.vabsreq.capitalize)
          %td
          -if v.votes>1
            %td
              %b= v.votes.to_s+" X"
          -else
            %td= (v.votes>0 ? 'Yes' : '')
          %td
          %td= v.vote_form
          %td
          %td= (v.vote_reject ? (v.vote_note=~/late/i ? 'Late' : 'Yes') : '')
          %td
          %td= v.voter_transaction_records.length
          %td
          %td= Election.find(v.election_id).name
          %td
          %td= link_to 'Show', v
-else
  .row
    .span11
      %h2= "No Voters"
    .span1#statebacknext
      = link_to 'Back', :back
