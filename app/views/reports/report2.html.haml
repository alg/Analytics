#front
  .row
    .span2
      &nbsp;
    .span10
      %span#likeh1= 'UOCAVA Ballot Return Report'
      %br
      %span#likeh3b= "Election: "+@election.display()
      %br
      %span#likeh3b= @report_date
      %br
  .row
    .span2.sidebar
      %em
        Describe the report details in this sidebar.
    .span10#scroil{:style=>"height:420px;"}
      %table{:style=>"text-align:center;margin:10px;"}
        %tr
          %th 
          %th &nbsp;&nbsp;
          %th All
          %th &nbsp;&nbsp;
          %th Registered
          %th &nbsp;&nbsp;
          %th Updated
          %th &nbsp;&nbsp;
          %th Requested
          %th &nbsp;&nbsp;
          %th Started
          %th &nbsp;&nbsp;
          %th{:colspan => 3} Absentee Ballot
          %th &nbsp;&nbsp;
        %tr      
          %th 
          %th &nbsp;&nbsp;
          %th Voters
          %th &nbsp;&nbsp;
          %th To Vote
          %th &nbsp;&nbsp;
          %th Voter Record
          %th &nbsp;&nbsp;
          %th Absentee Status
          %th &nbsp;&nbsp;
          %th Absentee Ballot
          %th &nbsp;&nbsp;
          %th Accepted
          %th &nbsp;&nbsp;
          %th Rejected
          %th &nbsp;&nbsp;
        %tr      
          %td= "#"
          %td
          %td= @voters
          %td
          %td= @vote_reg
          %td
          %td= @vote_upd
          %td
          %td= @vote_as
          %td
          %td= @vote_ab
          %td
          %td= @vote_aa
          %td
          %td= @vote_ar
          %td
        %tr
          %td= "%"
          %td
          %td= "100%"
          %td
          %td= (@vote_reg*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_upd*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_as*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_ab*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_aa*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_ar*100/@xvoters).round.to_s+"%"
          %td
      %br
  .row
    %span{:style=>"position:absolute;top:640px;"}
      .span3
        = link_to 'Back', '/analytic?id='+@election.id.to_s
  
