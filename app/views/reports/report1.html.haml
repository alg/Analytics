#front
  .row
    .span2
      &nbsp;
    .span10
      .row
        .span5#likeh1
          Voter Participation Report
        .span5#likeh3r
          = "Election: "+@election.display()
          = "&nbsp;".html_safe+"&nbsp;".html_safe+"&nbsp;".html_safe
      %span#likeh3b= @report_date
      %br
  .row
    .span2.sidebar
      %em
        Describe the report details in this sidebar.
    .span10#scroil{:style=>"height:420px;"}
      %table{:style=>"text-align:center;margin:10px;"}
        %tr
          %th 
          %th &nbsp;&nbsp;
          %th All
          %th &nbsp;&nbsp;
          %th Regular 
          %th &nbsp;&nbsp;
          %th No
          %th &nbsp;&nbsp;
          %th{:colspan => 3} Absentee
          %th &nbsp;&nbsp;
          %th{:colspan => 3} Provisional
          %th &nbsp;&nbsp;
          %th Whacky
        %tr      
          %th 
          %th &nbsp;&nbsp;
          %th Voters
          %th &nbsp;&nbsp;
          %th Vote
          %th &nbsp;&nbsp;
          %th Vote
          %th &nbsp;&nbsp;
          %th Accept
          %th &nbsp;&nbsp;
          %th Reject
          %th &nbsp;&nbsp;
          %th Accept
          %th &nbsp;&nbsp;
          %th Reject
          %th &nbsp;&nbsp;
          %th Voters
        %tr      
          %td= "#"
          %td
          %td= @voters
          %td
          %td= @vote_reg
          %td
          %td= @vote_no
          %td
          %td= @vote_aa
          %td
          %td= @vote_ar
          %td
          %td= @vote_pa
          %td
          %td= @vote_pr
          %td
          %td= @vote_wac
        %tr
          %td= "%"
          %td
          %td= "100%"
          %td
          %td= (@vote_reg*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_no*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_aa*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_ar*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_pa*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_pr*100/@xvoters).round.to_s+"%"
          %td
          %td= (@vote_wac*100/@xvoters).round.to_s+"%"
      %br
  .row
    %span{:style=>"position:absolute;top:640px;"}
      .span3
        = link_to 'Back', '/analytic?id='+@election.id.to_s
  
